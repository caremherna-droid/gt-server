# Production Environment Configuration for gt-server
NODE_ENV=production

# Server Configuration
PORT=3000

# CORS Configuration
PROD_URLS=https://gt-server-mu.vercel.app,https://gametribe.com,https://gametribe-backend.onrender.com,https://hub.gametribe.com,https://contest.gametribe.com,https://gt-contest-admin.web.app,https://gt-admin-dash.web.app,https://gametribe.co.ke
DEV_URLS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5000

# CORS Settings
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=true

# Firebase Configuration (add your actual Firebase config here)
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Google OAuth (add your actual Google OAuth config here)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://gt-server-mu.vercel.app/api/auth/google/callback

# Email Configuration (add your actual email config here)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM_NAME=GameTribe
EMAIL_FROM_ADDRESS=noreply@gametribe.com
EMAIL_REPLY_TO=support@gametribe.com

# Newsletter Configuration
NEWSLETTER_SCHEDULE=0 10 * * 5
EMAIL_BATCH_SIZE=50
EMAIL_BATCH_DELAY=1000
WEBSITE_URL=https://gametribe.com
UNSUBSCRIBE_URL=https://gametribe.com/unsubscribe 